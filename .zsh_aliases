# Quick directory #
###################

# utility function for fuzzy find on all directories from $HOME
# does not include ~/Library/
_gen_sd(){
    query="/"
    query+="${@:2}"
    dir=$(rg --hidden --files --null -g '!Library/' ${HOME} 2>/dev/null | \
            xargs -0 dirname 2>/dev/null | \
            awk '!x[$0]++' | \
        fzf --height 10 --query "$query")

    if [ ! -z "$dir" ]; then
        $1 $dir
    fi
}

# cd to any directory starting at $HOME
alias sd="_gen_sd cd"

# nvim to any directory starting at $HOME
alias nd="_gen_sd nvim"


