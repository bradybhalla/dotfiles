# leader key to access shortcuts
:: leader @
rcmd - space    ; leader
leader < escape ; default

# window management
leader < k        : yabai -m window --grid 1:1:0:0:1:1; skhd --key escape  # large window
leader < j        : yabai -m window --grid 8:8:1:1:6:6; skhd --key escape  # small window
leader < h        : yabai -m window --grid 1:2:0:0:1:1; skhd --key escape  # left half
leader < l        : yabai -m window --grid 1:2:1:0:1:1; skhd --key escape  # right half
leader < ctrl - k : yabai -m window --grid 2:1:0:0:1:1; skhd --key escape  # upper half
leader < ctrl - j : yabai -m window --grid 2:1:0:1:1:1; skhd --key escape  # lower half
leader < ctrl - h : yabai -m window --grid 1:3:0:0:2:1; skhd --key escape  # left two-thirds
leader < ctrl - l : yabai -m window --grid 1:3:2:0:1:1; skhd --key escape  # right third

leader < 1 : yabai -m window --space 1 --focus; yabai -m window --grid 1:1:0:0:1:1; skhd --key escape # move to space 1
leader < 2 : yabai -m window --space 2 --focus; yabai -m window --grid 1:1:0:0:1:1; skhd --key escape # move to space 2

# open apps
leader < shift - t : open -a Alacritty;                   skhd --key escape
leader < shift - b : open -a Firefox\ Developer\ Edition; skhd --key escape
leader < shift - k : open -a Things3;                     skhd --key escape
leader < shift - s : open -a Spotify;                     skhd --key escape
leader < shift - c : open -a Calendar;                    skhd --key escape
leader < shift - m : open -a Messages;                    skhd --key escape
